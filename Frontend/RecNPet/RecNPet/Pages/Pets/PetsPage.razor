    void GoTopetDetailsPage()
    {
        navigationManager.NavigateTo("/pet-details");
    }
}

<style>
    .fixed-button {
        position: fixed;
        bottom: 24px;
        left: 50%;
        transform: translate(-50%, 0);
        width: fit-content;
    }

    .pets-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        padding-top: 8px;
    }

    .pets-card {
        border-radius: 12px;
        background-color: #ED8E00;
        width: 144px;
        height: 144px; 
    }

    .pets-card-add {
        display: flex;
        background: rgba(255, 153, 0, 0.5);
